@using Newtonsoft.Json;
@using Sra.P2rmis.Web.Controllers
@model Sra.P2rmis.Web.UI.Models.AssignmentsViewModel
@{
    /**/

    ViewBag.PageTitle = "My Draft Summary Statements";
}
<style type="text/css">
    .k-grid-header .k-grid-filter {
        padding-left: 0px !important;
    }

    .fa-search {
        position: absolute;
        right: 70px;
        color: #0B4FF4;
        padding-top: 5px;
    }

    #grid td:nth-child(13) {
        padding-right: 0px;
        padding-left: 5px;
    }

    .k-grid thead tr th:nth-child(6) .k-grid-filter, .k-grid thead tr th:nth-child(7) .k-grid-filter {
        top: 33px;
        padding-top: 0px;
    }

    .k-grid thead tr th:nth-child(6), .k-grid thead tr th:nth-child(7) {
        position: relative;
    }

        .k-grid thead tr th:nth-child(6) .k-link, .k-grid thead tr th:nth-child(7) .k-link {
            float: left;
        }

    #successMessage:target {
        display: block;
    }
</style>
<div class="formTitle padding-bottom10">Summary Statements</div>
<div id="successMessage"></div>
<div class="row-fluid">
    <div class="span12" id="mainContent" style="border:thin solid #ddd;padding:20px">
        @Html.Partial("_TabMenu")
        @Html.Partial("_KendoHeader2016")

        <div id="loading"></div>
        <div id="statementContents">
            <table style="width: 100%">
                <tr>
                    <td style="text-align:right" id="dataLoaded"></td>
                </tr>
            </table>
            <div id="grid"></div>
        </div>
        <div class="modal fade" id="confirm-delete" tabindex="-1" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        Check-In Confirmation
                    </div>
                    <div class="modal-body">
                        Draft summary statement<span class="modal-log-number"></span> is Checked out by<span class="modal-user-name">you</span> currently.
                        Are you sure to Check-In draft summary statement <span class="modal-log-number"></span>?<br /><br />
                        Click 'Continue' to finish Check-in <span class="modal-log-number"></span>. Click 'Cancel' to stop this Check-in.
                    </div>
                    <div class="modal-footer">
                        <a href="#" id="modalConfirmationButton" class="btn btn-danger danger">Continue</a>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
        <input type="hidden" id="IsWebBased" />
    </div>
</div>
@Html.IncludeVersionedFiles("/Scripts/Custom/SummaryStatement/ss-document.js")
@Html.IncludeVersionedFiles("/Scripts/Custom/SummaryStatement/ss-myDraft.js")
@Html.IncludeVersionedFiles("/Scripts/Custom/SummaryStatement/adminNotes.js")
@Html.IncludeVersionedFiles("/Scripts/Custom/fileDownload.js")
