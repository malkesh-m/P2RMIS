<style>
    textarea {
        width:90%;
        
    }
    #commentContainer {
    font-size:12px;
        font-family:Arial
    }
</style>
@using (Html.BeginForm())
{
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body" style="padding:30px 30px 0px 30px">
                <div class="container-fluid">
                    <div class="row-fluid">
                        <span class="span12 center-align" id="commentContainer">
                            <textarea rows="11" cols="50" id="discussionBoardComment" maxlength="5000">
                            </textarea>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<script type="text/javascript">
    var getText = $.trim($('#discussionBoardComment').val());
    if (getText == "") {
        $('#discussionBoardComment').val('');
    }
</script>

