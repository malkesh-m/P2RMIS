@model Sra.P2rmis.Web.UI.Models.ResetModel
@using System.Web;
  
<div class="row-fluid">
    <div class="span3"></div>
    <div class="span6">
        <div id="containerSub">
        <h3>Reset Password - Step 1 of 2</h3>
        @using (Html.BeginForm("Reset", "Account", FormMethod.Post, new { id = "Reset", name = "Reset" }))
        {
            <table style="width: 100%"> 
                <tr>
                    <td colspan="2">Please enter the email address associated with your user account in the field below.</td>
                </tr>
                <tr>
                    <td colspan="2" id="email-address-input" role="alert" tabindex="-1">@Html.Raw(HttpUtility.HtmlDecode(Html.ValidationSummary("").ToString()))</td>
                </tr>
                <tr>
                    <td><span class="required">*</span>Enter Your E-mail Address:</td>
                    <td>
                        <label for="Email" class="sr-only">Enter your email address</label>
                        @Html.TextBoxFor(m => m.Email, new { @class = "wide" })<br />
                    </td>
                </tr>
                <tr>
                    <td colspan="2" align="right">
                        <p><input class="focus" type="submit" value="Next Step >>" title="Next Step" /></p>
                    </td>
                </tr>

            </table>
        }
        </div>
    </div>
    <div class="span3"></div>
</div>        
<script type="text/javascript">
    $('#Reset').submit(function () {
        setTimeout(function () {
            var getText = $('#email-address-input li').text();
            if (getText != "") {
                $('#email-address-input li').focus();
            }
        }, 500);
    });
</script>

