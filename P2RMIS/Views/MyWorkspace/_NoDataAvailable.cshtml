<!-- Custom JavaScript -->
<script type="text/javascript">
    //function to perform close operation
    $('#smallModal div.modal-footer :button').on('click', function (e) {
        e.preventDefault();
        if ($(this).attr('id') == 'closeDialogBtn') {
            $(this).closest(".ui-dialog .ui-dialog-content").dialog("close");
        }
    });
</script>